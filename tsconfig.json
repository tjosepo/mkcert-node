{
  "include": ["src/**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "CommonJS",
    "outDir": "packages/mkcert/dist",
    "sourceMap": true,
    "declaration": true,
  }
}